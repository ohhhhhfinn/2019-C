#include <stdio.h>


 
    
    int main(){
        
        int input;
        printf("請輸入數字：");
        scanf("%d", &input);
        
        int a = input;
        int b = (a/2);
     
     
        for(int i=0;i<=b;i++){
            
        
            
            
            printf(" ");
           for(int j=0;j<2*i+1;j++){
               printf("*");
           }
            
            
            
            printf("\n");
        }
    
 
        
    return 0;
    }
