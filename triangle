#include <stdio.h>


 
    
    int main(){
        
        int input;
        printf("請輸入數字：");
        scanf("%d", &input);
        
        int a = input;
        int b = (a/2);
        int c = (a/2);
        for(int i=0;i<=b;i++){
    
            for(int j=0;j<c;j++){
                printf(" ");
            
            }
            c=c-1;
            for(int k=0;k<2*i+1;k++){
               printf("*");
           }
            printf("\n");
        }
        
      
            
            
          
    return 0;
    }
